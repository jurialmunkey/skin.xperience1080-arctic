<window type="dialog" id="3052">
    <defaultcontrol always="true">3</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <controls>
        <control type="group">
            <include>KeyboardAnimations</include>            
            <control type="label">
                <description>Heading</description>
                <posx>473</posx>
                <posy>218</posy>
                <width>974</width>
                <include>DialogHeaderMod</include>
                <label>41140</label>
                <align>center</align>
            </control>
 
            <control type="image">
                <posx>920</posx>
                <posy>246</posy>
                <width>80</width>
                <height>60</height>
                <texture>dialogs/default/arrow.png</texture>
            </control>
            <control type="image">
                <posx>604</posx>
                <posy>266</posy>
                <width>712</width>
                <height>548</height>
                <texture border="39">dialogs/default/bg.png</texture>
            </control>
            <control type="image">
            	<posx>638</posx>
            	<posy>300</posy>
            	<width>644</width>
            	<height>481</height>
            	<texture border="5">dialogs/default/inner.png</texture>
            </control>
            
            <control type="grouplist" id="3">
                <include>SettingsDialogGrouplistVars</include>
                <!-- TV SHOWS WIDGET -->
				<control type="button" id="2101">
					<posx>0</posx>
					<posy>0</posy>
					<width>648</width>
					<height>77</height>
					<align>left</align>
					<aligny>center</aligny>
					<textoffsetx>35</textoffsetx>
					<font>Font-Condensed-S30-B</font>
					<include>SettingsCategoryDefaultButtonVars</include>
					<onclick>Skin.ToggleSetting(overlay.show.banners)</onclick>
					<onclick condition="Skin.HasSetting(overlay.show.banners)">Skin.SetString(overlay.show.banners.text,Text Banner)</onclick>
					<onclick condition="!Skin.HasSetting(overlay.show.banners)">Skin.SetString(overlay.show.banners.text,Checkmarks)</onclick>
					<label>Overlay style</label>
					<label2>$INFO[Skin.String(overlay.show.banners.text)]</label2>
				</control>
				<control type="radiobutton" id="2102">
					<posx>0</posx>
					<posy>0</posy>
					<width>648</width>
					<height>77</height>
					<include>SettingsCategoryPanelRadioButtonVars</include>
					<onclick>Skin.ToggleSetting(overlay.show.unwatched)</onclick>
					<selected>Skin.HasSetting(overlay.show.unwatched)</selected>										
					<label>Unwatched overlays</label>
					<visible>!Skin.HasSetting(overlay.show.banners)</visible>
				</control>
				<control type="radiobutton" id="2103">
					<posx>0</posx>
					<posy>0</posy>
					<width>648</width>
					<height>77</height>
					<include>SettingsCategoryPanelRadioButtonVars</include>
					<onclick>Skin.ToggleSetting(overlay.show.inprogress)</onclick>
					<selected>Skin.HasSetting(overlay.show.inprogress)</selected>										
					<label>In progress overlays</label>
					<visible>!Skin.HasSetting(overlay.show.banners)</visible>
				</control>
            </control>
            
            <control type="group" id="10">
                <posx>626</posx>
                <posy>776</posy>
                <control type="button" id="5">
                    <description>Close</description>
                    <texturefocus>buttons/cancel-fo.png</texturefocus>
                    <texturenofocus>buttons/cancel-nf.png</texturenofocus>
                    <include>DialogButtonDimensions</include>
                    <onleft>6</onleft>
                    <onright>6</onright>
                    <onup>3</onup>
                    <ondown>3</ondown>
                    <label>$LOCALIZE[42002]</label>
                    <onclick>PreviousMenu</onclick>
                </control>
            </control>
        </control>
    </controls>
</window>