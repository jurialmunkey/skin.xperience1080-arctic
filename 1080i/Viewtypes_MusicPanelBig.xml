<includes>
<!-- =============== -->
<!-- Big Panel (55)      -->
<!-- =============== -->
    <include name="Viewtype-MusicPanelBig">
        <control type="group">
            <visible>Control.IsVisible(55) + !Window.IsActive(musicinformation)</visible>
            <include>CommonViewAnimations</include>
            <include>BannerListAnimations</include>
            <include>OptionsShutdownAnimation</include>
            <include>listEndAnimation</include>
            <posx>127</posx>
			<posy>190</posy>
            <control type="fixedlist" id="55">
				<posx>-480</posx>
				<posy>-4</posy>
				<width>2618</width>
				<height>1214</height>
                <include>FullscreenDimensions</include>
                <scrolltime tween="cubic" easing="out">350</scrolltime>
                <orientation>horizontal</orientation>
                <viewtype label="Panel">list</viewtype>
                <ondown condition="!Skin.HasSetting(KioskMode)">9010</ondown>
                <ondown condition="Skin.HasSetting(KioskMode)">RunScript(special://skin/extras/scripts/setClearProperty.py,BounceTop)</ondown>
                <onright>55</onright>
                <onleft>55</onleft>
                <onup>55</onup>
                <preloaditems>2</preloaditems>
                <focusposition>1</focusposition>
                <visible>Container.Content(albums) | Container.Content(artists)</visible>
                <itemlayout width="476" height="476">
                	<control type="group">
						<control type="image">
							<description>Reflection</description>
							<posx>10</posx>
							<posy>474</posy>
							<width>464</width>
							<height>464</height>
							<texture background="true" flipy="true" diffuse="views/posterview/diffuse-ref.png" fallback="views/fallbacks/DefaultAlbumCover.png/square-large.png">$VAR[WallPoster]</texture>
							<aspectratio scalediffuse="false">scale</aspectratio>
						</control>
						<control type="image">
							<description>Cover Shadow</description>
							<posx>-8</posx>
							<posy>456</posy>
							<width>500</width>
							<height>36</height>
							<texture background="true">views/posterview/shadow.png</texture>
							<aspectratio scalediffuse="false">stretch</aspectratio>
						</control>
						<control type="image">
							<description>Poster</description>
							<posx>10</posx>
							<posy>10</posy>
							<width>464</width>
							<height>464</height>
							<texture background="true" diffuse="views/newgloss/musicwall-diffuse.png" fallback="views/fallbacks/DefaultAlbumCover.png/square-large.png">$VAR[WallPoster]</texture>
							<colordiffuse>ffcccccc</colordiffuse>
							<aspectratio>stretch</aspectratio>
						</control>
						<control type="image">
							<description>Gloss</description>
							<posx>10</posx>
							<posy>10</posy>
							<width>464</width>
							<height>464</height>
							<texture background="true" diffuse="views/newgloss/musicwall-diffuse.png">views/newgloss/info-gloss.png</texture>
							<colordiffuse>ffcccccc</colordiffuse>
							<aspectratio>stretch</aspectratio>
						</control>
						<control type="image">
							<description>Border</description>
							<posx>0</posx>
							<posy>0</posy>
							<width>484</width>
							<height>484</height>
							<texture border="25">views/newgloss/border.png</texture>
							<colordiffuse>ffcccccc</colordiffuse>
							<aspectratio>stretch</aspectratio>
						</control>
						<control type="image">
							<description>Poster</description>
							<posx>10</posx>
							<posy>10</posy>
							<width>464</width>
							<height>464</height>
							<texture>views/newgloss/musicwall-diffuse.png</texture>
							<colordiffuse>88ffffff</colordiffuse>
							<aspectratio>stretch</aspectratio>
						</control>
					</control>
                </itemlayout>
                <focusedlayout width="714" height="714">
                    <control type="button">
                        <visible>true</visible>
                        <onfocus>AlarmClock(cycletracklist,null,0:20,silent,loop)</onfocus>
                    </control>
                    <control type="group">
						<animation type="Focus" condition="Container(55).OnNext | Container(55).OnPrevious">
							<effect type="zoom" start="66.6" end="100" time="200" delay="100" tween="sine" easing="out" center="362,0" />
						</animation>
						<control type="image">
							<description>Reflection</description>
							<posx>10</posx>
							<posy>712</posy>
							<width>702</width>
							<height>702</height>
							<texture background="true" flipy="true" diffuse="views/posterview/diffuse-ref.png" fallback="views/fallbacks/DefaultAlbumCover.png/square-large.png">$VAR[WallPoster]</texture>
							<aspectratio scalediffuse="false">scale</aspectratio>
						</control>
						<control type="image">
							<description>Cover Shadow</description>
							<posx>-8</posx>
							<posy>694</posy>
							<width>738</width>
							<height>36</height>
							<texture background="true">views/posterview/shadow.png</texture>
							<aspectratio scalediffuse="false">stretch</aspectratio>
						</control>
						<control type="image">
							<description>Cover</description>
							<posx>10</posx>
							<posy>10</posy>
							<width>702</width>
							<height>702</height>
							<texture background="true" diffuse="views/newgloss/music-diffuse-702.png" fallback="views/fallbacks/DefaultAlbumCover.png/square-large.png">$VAR[WallPoster]</texture>
							<aspectratio scalediffuse="false">scale</aspectratio>
							<fadetime>200</fadetime>
						</control>
						<control type="image">
							<description>Gloss</description>
							<posx>10</posx>
							<posy>10</posy>
							<width>702</width>
							<height>702</height>
							<texture background="true" diffuse="views/newgloss/music-diffuse-702.png">views/newgloss/info-gloss.png</texture>
							<aspectratio scalediffuse="false">stretch</aspectratio>
						</control>
						<control type="image">
							<description>Border</description>
							<posx>0</posx>
							<posy>0</posy>
							<width>722</width>
							<height>722</height>
							<texture border="25">views/newgloss/border.png</texture>
							<aspectratio scalediffuse="false">stretch</aspectratio>
						</control>
						
					</control>
                </focusedlayout>
            </control>
			<control type="group">
				<posy>476</posy>
				<posx>714</posx>
				<control type="label">
					<posx>24</posx>
					<posy>30</posy>
					<width>690</width>
					<label>$INFO[ListItem.Album]</label>
					<font>Font-Alaska-S32-BL</font>
					<textcolor>mod-infotags</textcolor>
					<scroll>false</scroll>
					<align>left</align>
					<visible>Container.Content(Albums)</visible>
				</control>
				<control type="label">
					<posx>24</posx>
					<posy>30</posy>
					<width min="50" max="690">auto</width>
					<label>$INFO[ListItem.Label]</label>
					<font>Font-Alaska-S32-BL</font>
					<textcolor>mod-infotags</textcolor>
					<scroll>false</scroll>
					<align>left</align>
					<visible>!Container.Content(Albums)</visible>
				</control>
				<control type="group">
					<visible>![Container(55).OnNext | Container(55).OnPrevious] + Container.Content(Albums)</visible>
					<animation effect="fade" end="100" start="0" time="500" delay="0" reversible="false">Visible</animation>
					<control type="label">
						<description>Tracks</description>
						<posx>24</posx>
						<posy>74</posy>
						<width>330</width>
						<height>125</height>
						<label>$VAR[MusicTracklistVar]</label>
						<align>justify</align>
						<aligny>top</aligny>
						<textcolor>mod-infotags-l</textcolor>
						<font>Font-Alaska-S25-NC</font>
						<scroll>false</scroll>
						<wrapmultiline>false</wrapmultiline>
					</control>
					<control type="label">
						<description>Tracks Right</description>
						<posx>475</posx>
						<posy>74</posy>
						<width>330</width>
						<height>125</height>
						<label>$VAR[MusicTracklistAltVar]</label>
						<align>justify</align>
						<aligny>top</aligny>
						<textcolor>mod-infotags-l</textcolor>
						<font>Font-Alaska-S25-NC</font>
						<scroll>false</scroll>
						<wrapmultiline>false</wrapmultiline>
					</control>
					<control type="textbox">
						<description>Plot</description>
						<posx>24</posx>
						<posy>74</posy>
						<width>902</width>
						<height>147</height>
						<label>$VAR[MusicTracklistInfoVar]</label>
						<align>justify</align>
						<textcolor>mod-infotags-l</textcolor>
						<font>Font-Alaska-S25-NC</font>
					</control>
				</control>
				<control type="textbox">
					<posx>24</posx>
					<posy>74</posy>
					<width>902</width>
					<height>147</height>
					<label>$INFO[ListItem.Property(Artist_Description)]</label>
					<font>Font-Alaska-S25-NC</font>
					<textcolor>mod-infotags-l</textcolor>
					<align>justify</align>
					<autoscroll delay="13000" time="3000" repeat="13000" />
					<visible>!IsEmpty(ListItem.Property(Artist_Description)) + Container.Content(Artists)</visible>
				</control>
			</control>
        </control>
    </include>    
</includes>