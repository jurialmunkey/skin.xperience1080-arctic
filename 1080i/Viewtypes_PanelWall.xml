<includes>
<!-- =============== -->
<!-- Panel Wall (510)      -->
<!-- =============== -->
    <include name="Viewtype-PanelWall">
        <control type="group">
            <visible>Control.IsVisible(510) + !Window.IsActive(movieinformation)</visible>
            <include>CommonViewAnimations</include>
            <include>OptionsShutdownAnimation</include>
            <posx>36</posx>
			<posy>170</posy>
			<animation effect="slide" start="0" end="84" time="0" condition="!IntegerGreaterThan(Container(510).NumItems,6)">Conditional</animation>
			<animation effect="slide" start="0" end="84" time="0" condition="!IntegerGreaterThan(Container(510).NumItems,3)">Conditional</animation>
			<control type="group">
                <posx>0</posx>
                <control type="image">
                    <description>Landscape</description>
                    <posx>6</posx>
                    <posy>6</posy>
                    <width>828</width>
                    <height>464</height>
                    <texture background="true" diffuse="views/newgloss/panel-fanart-diffuse.png">$VAR[ListInfoLandscapeVar]</texture>
                    <aspectratio scalediffuse="false">stretch</aspectratio>
                    <fadetime>200</fadetime>
                </control>
                <control type="image">
                    <posx>734</posx>
                    <posy>6</posy>
                    <width>100</width>
                    <height>100</height>
                    <aspect>keepaspect</aspect>
                    <texture>$INFO[ListItem.Overlay,overlays/aeon/,]</texture>
                    <visible>!IsEmpty(ListItem.Overlay)</visible>
                </control> 
                <!-- GLOSS AND BORDER OVERLAY -->
                <control type="image">
                    <description>Gloss</description>
                    <posx>6</posx>
                    <posy>6</posy>
                    <width>828</width>
                    <height>464</height>
                    <texture diffuse="views/newgloss/panel-fanart-diffuse.png">views/newgloss/info-gloss.png</texture>
                    <aspectratio align="left" aligny="top" scalediffuse="false">stretch</aspectratio>
                </control>
                <control type="image">
                    <description>Border</description>
                    <posx>-4</posx>
                    <posy>-4</posy>
                    <width>848</width>
                    <height>484</height>
                    <texture border="25">views/newgloss/border.png</texture>
                    <aspectratio>stretch</aspectratio>
                </control> 


                <control type="group">
                    <posy>472</posy>
                    <control type="label">
                        <posx>24</posx>
                        <posy>30</posy>
                        <width>790</width>
                        <label>$INFO[ListItem.Label]</label>
                        <font>Font-Alaska-S32-BL</font>
                        <textcolor>mod-infotags</textcolor>
                        <scroll>false</scroll>
                        <align>left</align>
                    </control>
                    <control type="textbox">
                        <posx>24</posx>
                        <posy>72</posy>
                        <width>790</width>
                        <height>147</height>
                        <label>$INFO[ListItem.Plot]</label>
                        <font>Font-Alaska-S25-NC</font>
                        <textcolor>mod-infotags</textcolor>
                        <align>justify</align>
                        <autoscroll delay="13000" time="3000" repeat="13000" />
                    </control>
                </control>
            </control>

            <control type="panel" id="510">
				<posx>840</posx>
				<posy>0</posy>
				<width>1008</width>
				<height>714</height>
                <include>FullscreenDimensions</include>
                <scrolltime tween="cubic" easing="out">500</scrolltime>
                <pagecontrol>70</pagecontrol>
                <orientation>horizontal</orientation>
                <viewtype label="Panel (Wall)">list</viewtype>
                <onup>510</onup>
                <ondown>70</ondown>
                <onleft>510</onleft>
                <onright>510</onright>
                <preloaditems>2</preloaditems>
                <visible>Container.Content(movies) | Container.Content(tvshows) | Container.Content(actors) | Container.HasFolders | Container.Content(episodes) | Container.Content(seasons)</visible>
                <itemlayout width="168" height="238">
                    <control type="image">
                        <description>Poster</description>
                        <posx>6</posx>
                        <posy>6</posy>
                        <width>156</width>
                        <height>226</height>
                        <texture background="true" diffuse="views/newgloss/panel-poster-diffuse.png">$VAR[WallPoster]</texture>
                        <aspectratio>stretch</aspectratio>
                        <colordiffuse>ffcccccc</colordiffuse>
                    </control>
                    <control type="image">
                        <posx>112</posx>
                        <posy>6</posy>
                        <width>50</width>
                        <height>50</height>
                        <aspect>keepaspect</aspect>
                        <texture>$INFO[ListItem.Overlay,overlays/aeon/,]</texture>
                        <visible>!IsEmpty(ListItem.Overlay)</visible>
                        <colordiffuse>ffcccccc</colordiffuse>
                    </control> 
                    <!-- GLOSS AND BORDER OVERLAY -->
                    <control type="image">
                        <description>Gloss</description>
                        <posx>6</posx>
                        <posy>6</posy>
                        <width>156</width>
                        <height>226</height>
                        <texture diffuse="views/newgloss/panel-poster-diffuse.png">views/newgloss/gloss.png</texture>
                        <aspectratio align="left" aligny="top" scalediffuse="false">keep</aspectratio>
                        <colordiffuse>ffcccccc</colordiffuse>
                    </control>
                    <control type="image">
                        <description>Border</description>
                        <posx>-4</posx>
                        <posy>-4</posy>
                        <width>176</width>
                        <height>246</height>
                        <texture border="25">views/newgloss/border.png</texture>
                        <aspectratio>stretch</aspectratio>
                        <colordiffuse>ffcccccc</colordiffuse>
                    </control>  
                    <control type="image">
                        <description>Poster</description>
                        <posx>6</posx>
                        <posy>6</posy>
                        <width>156</width>
                        <height>226</height>
                        <texture border="5">views/newgloss/whitepanel.png</texture>
                        <aspectratio>stretch</aspectratio>
                        <colordiffuse>88ffffff</colordiffuse>
                    </control>
                </itemlayout>
                <focusedlayout width="168" height="238">
                    <control type="group">
                        <animation effect="zoom" start="75" end="120" time="150" center="auto">Focus</animation>
                        <control type="image">
                            <posx>11</posx>
                            <posy>11</posy>
                            <width>146</width>
                            <height>217</height>
                            <aspectratio scalediffuse="false">stretch</aspectratio>
                            <texture background="true" diffuse="views/newgloss/panel-poster-diffuse.png">$VAR[WallPoster]</texture>
                        </control>
                        <control type="image">
                            <posx>107</posx>
                            <posy>11</posy>
                            <width>50</width>
                            <height>50</height>
                            <aspect>keepaspect</aspect>
                            <texture>$INFO[ListItem.Overlay,overlays/aeon/,]</texture>
                            <visible>!IsEmpty(ListItem.Overlay)</visible>
                        </control> 
                        <!-- GLOSS AND BORDER OVERLAY -->
                        <control type="image">
                            <description>Gloss</description>
                            <posx>11</posx>
                            <posy>11</posy>
                            <width>146</width>
                            <height>216</height>
                            <texture diffuse="views/newgloss/panel-poster-diffuse.png">views/newgloss/gloss.png</texture>
                            <aspectratio align="left" aligny="top" scalediffuse="false">keep</aspectratio>
                        </control>
                        <control type="image">
                            <description>Border</description>
                            <posx>-9</posx>
                            <posy>-9</posy>
                            <width>186</width>
                            <height>256</height>
                            <texture border="25">views/newgloss/border-focus.png</texture>
                            <aspectratio>stretch</aspectratio>
                        </control> 
                        <control type="image">
                            <description>Border</description>
                            <posx>-9</posx>
                            <posy>-9</posy>
                            <width>186</width>
                            <height>256</height>
                            <texture border="25">views/newgloss/border-fo.png</texture>
                            <aspectratio>stretch</aspectratio>
                            <colordiffuse>ccffffff</colordiffuse>
                        </control> 
                    </control>
                </focusedlayout>
            </control>
            <!--Scrollbar-->
            <control type="group">
				<posx>850</posx>
				<posy>180r</posy>
                <control type="image">
                    <description>Scrollbar background (visible on focus)</description>
                    <width>986</width>
                    <height>6</height>
                    <texture border="6,3,6,3">views/other/scrollbar-h.png</texture>
                    <visible>Control.IsVisible(510) + Control.HasFocus(70)</visible>
                    <animation effect="fade" start="0" end="25" time="300" tween="sine" easing="inout">Visible</animation>
                    <animation effect="fade" start="25" end="0" time="300" tween="sine" easing="inout">Hidden</animation>
                </control>
                <control type="scrollbar" id="70">
                    <description>Scrollbar</description>
                    <width>992</width>
                    <height>6</height>
                    <orientation>horizontal</orientation>
                    <texturesliderbar border="6,3,6,3">views/other/scrollbar-h.png</texturesliderbar>
                    <texturesliderbarfocus border="6,3,6,3">views/other/scrollbar-h-fo.png</texturesliderbarfocus>
                    <showonepage>false</showonepage>
                    <onup>510</onup>
                    <ondown condition="!Skin.HasSetting(KioskMode)">9010</ondown>
                    <ondown condition="Skin.HasSetting(KioskMode)">510</ondown>
                    <animation effect="fade" start="40" end="0" time="300" tween="sine" easing="inout" condition="!Control.IsVisible(9772)">Conditional</animation>
                    <visible>Control.IsVisible(510)</visible>
                </control>
            </control>
        </control>
    </include>    
</includes>